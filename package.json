{
  "name": "toilet-map-bulgaria",
  "version": "2.0.0",
  "description": "Toilet Map Bulgaria (toaletna.com) - Interactive map for finding public toilets in Bulgaria",
  "main": "server/index.ts",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "tsx server/index.ts",
    "dev:client": "cd client && npm run dev",
    "build": "cd client && npm install && npx vite build --mode production",
    "build:server": "tsc server/index.ts --outDir dist --target es2020 --module commonjs",
    "build:production": "NODE_ENV=production npm run build && npm run build:server",
    "start": "NODE_ENV=production tsx server/index.ts",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "install:all": "npm install && cd client && npm install",
    "migrate": "node setup_and_migrate_all.mjs",
    "check-quota": "node check_firebase_quota.mjs",
    "test": "cd client && npm test",
    "test:e2e": "cd client && npm run test:e2e",
    "lint": "cd client && npm run lint",
    "lint:fix": "cd client && npm run lint:fix",
    "preview": "cd client && npm run preview",
    "analyze": "cd client && ANALYZE=true npm run build",
    "deploy:build": "npm run build && npm run build:server",
    "deploy:production": "node scripts/deploy-production.js",
    "icons:generate": "node scripts/generate-icons.js",
    "seo:check": "cd client && npm run build && lighthouse http://localhost:4173 --chrome-flags=\"--headless\"",
    "performance:check": "cd client && npm run build && npm run preview & npx wait-on http://localhost:4173 && npx lighthouse http://localhost:4173 --output html --output-path lighthouse-report.html"
  },
  "keywords": [
    "toilet",
    "map",
    "bulgaria",
    "toilets",
    "public restrooms",
    "ibs",
    "health",
    "accessibility",
    "navigation",
    "pwa",
    "toaletna"
  ],
  "author": "Toilet Map Bulgaria Team",
  "homepage": "https://toaletna.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/toiletmap/toiletmap-bulgaria.git"
  },
  "bugs": {
    "url": "https://github.com/toiletmap/toiletmap-bulgaria/issues"
  },
  "license": "MIT",
  "dependencies": {
    "@neondatabase/serverless": "^0.7.2",
    "@supabase/supabase-js": "^2.53.0",
    "drizzle-orm": "^0.29.1",
    "drizzle-zod": "^0.5.1",
    "express": "^4.18.2",
    "firebase-admin": "^12.0.0",
    "nanoid": "^5.0.4",
    "node-fetch": "^3.3.2",
    "tsx": "^4.6.2",
    "vite": "^5.0.0",
    "ws": "^8.14.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.4",
    "concurrently": "^8.2.2",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ]
}
